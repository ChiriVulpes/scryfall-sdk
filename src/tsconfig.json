{
	"compilerOptions": {
		"target": "es2015",
		"outDir": "../out/",
		"module": "commonjs",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictPropertyInitialization": false,
        "strict": true,
		"declaration": true,
		"experimentalDecorators": true
	},
	"include": [
		"**/*.ts"
	]
}